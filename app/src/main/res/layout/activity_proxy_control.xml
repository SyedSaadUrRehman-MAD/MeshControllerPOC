<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFEEF0"
    tools:context=".ui.ProxyControlActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vCentre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hCentre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFEB3B"
        android:onClick="onYellow"
        app:layout_constraintEnd_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_white" />

    <Button
        android:id="@+id/btn_cyan"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:background="#00BCD4"
        android:onClick="onCyan"
        app:layout_constraintEnd_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_red" />

    <Button
        android:id="@+id/btn_magenta"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#EE39F5"
        android:onClick="onMagenta"
        app:layout_constraintStart_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_green" />

    <Button
        android:id="@+id/btn_black"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:background="#000000"
        android:onClick="onBlack"
        app:layout_constraintStart_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:onClick="onBlue"
        app:layout_constraintStart_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_on" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#4CAF50"
        android:onClick="onGreen"
        app:layout_constraintStart_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_on" />

    <Button
        android:id="@+id/btn_r4"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:onClick="onR4"
        android:text="R4"
        app:layout_constraintBottom_toTopOf="@+id/hCentre"
        app:layout_constraintEnd_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_white"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:onClick="onWhite"
        android:layout_marginRight="80dp"
        app:layout_constraintEnd_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_on"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="#F44336"
        android:onClick="onRed"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toBottomOf="@+id/btn_on"
        tools:layout_editor_absoluteX="176dp" />

    <Button
        android:id="@+id/btn_c2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:onClick="onC2"
        android:text="C2"
        app:layout_constraintBottom_toTopOf="@+id/btn_r1"
        app:layout_constraintEnd_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_c3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:onClick="onC3"
        android:text="C3"
        app:layout_constraintBottom_toTopOf="@+id/btn_r1"
        app:layout_constraintStart_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_c4"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="15dp"
        android:onClick="onC4"
        android:text="C4"
        app:layout_constraintBottom_toTopOf="@+id/btn_r1"
        app:layout_constraintStart_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_r3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:onClick="onR3"
        android:text="R3"
        app:layout_constraintBottom_toTopOf="@+id/btn_r4"
        app:layout_constraintEnd_toStartOf="@+id/vCentre" />

    <TextView
        android:id="@+id/txt_dts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="DST: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_all" />

    <Button
        android:id="@+id/btn_c1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:onClick="onC1"
        android:text="C1"
        app:layout_constraintBottom_toTopOf="@+id/btn_r1"
        app:layout_constraintEnd_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_r1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:onClick="onR1"
        android:text="R1"
        app:layout_constraintBottom_toTopOf="@+id/btn_r2"
        app:layout_constraintEnd_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_all"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="49dp"
        android:onClick="onAll"
        android:text="ALL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_c2" />

    <Button
        android:id="@+id/btn_r2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:onClick="onR2"
        android:text="R2"
        app:layout_constraintBottom_toTopOf="@+id/btn_r3"
        app:layout_constraintEnd_toStartOf="@+id/vCentre" />

    <Button
        android:id="@+id/btn_on"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:onClick="onOn"
        android:text="ON"
        app:layout_constraintEnd_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toTopOf="@+id/hCentre" />

    <Button
        android:id="@+id/btn_off"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="onOff"
        android:text="OFF"
        app:layout_constraintStart_toStartOf="@+id/vCentre"
        app:layout_constraintTop_toTopOf="@+id/hCentre" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="379dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@android:string/ok"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:onClick="onConnect"
        android:text="CONNECT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_vendor"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:onClick="onVendorModel"
        android:text="send vendor model trigger"
        app:layout_constraintBottom_toTopOf="@id/txt_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>